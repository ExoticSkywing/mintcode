# ==========================================
# MintCode Development Environment Configuration
# ==========================================

# --- Security ---
ADMIN_API_KEY=change-me
VOUCHER_SECRET=change-me-too

# --- Database ---
# Local dev usually uses localhost or docker service name
DATABASE_URL=mysql+pymysql://root:password@127.0.0.1:3306/mintcode?charset=utf8mb4

# --- Provider (5sim) ---
FIVESIM_API_KEY=

# --- Worker / Reliability ---
# Dev mode can use inline processing for simplicity (no separate worker process needed for basic testing)
# or 'external' if you run the worker container.
REDEEM_PROCESS_MODE=inline

WORKER_LEASE_SECONDS=30
WORKER_ID=
BUY_INFLIGHT_SECONDS=20
MAX_BUY_ATTEMPTS=3

# --- User Interface ---
REDEEM_WAIT_SECONDS=120

# --- Developer API Security ---
DEV_AUTH_TIMESTAMP_SKEW_SECONDS=300
DEV_RATE_LIMIT_VOUCHER_PER_MIN=30
DEV_RATE_LIMIT_DEV_KEY_PER_MIN=60
DEV_RATE_LIMIT_IP_PER_MIN=120

# --- System ---
DB_AUTO_CREATE_TABLES=true
